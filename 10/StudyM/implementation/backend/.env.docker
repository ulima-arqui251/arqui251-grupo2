# Configuración del servidor para Docker
PORT=3001
NODE_ENV=production

# Base de datos MySQL (Docker Compose)
DB_TYPE=mysql
DB_HOST=mysql
DB_USER=studymate_user
DB_PASS=studymate_pass_2025
DB_NAME=studymate_db
DB_PORT=3306

# JWT Configuration
JWT_SECRET=studymate_jwt_secret_2025_super_secure
