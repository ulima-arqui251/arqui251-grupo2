# Configuración de desarrollo temporal con SQLite
# Descomenta estas líneas para usar SQLite en desarrollo
# DB_TYPE=sqlite
# DB_STORAGE=./database.sqlite

# Configuración de producción con MySQL
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_NAME=studymate
DB_USER=studymate_user
DB_PASSWORD=studymate_password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=30d

# Server Configuration
PORT=3000
NODE_ENV=development

# Azure Configuration (opcional para pruebas locales)
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection-string
AZURE_STORAGE_CONTAINER_NAME=studymate-files
AZURE_COGNITIVE_SERVICES_ENDPOINT=your-azure-cognitive-services-endpoint
AZURE_COGNITIVE_SERVICES_KEY=your-azure-cognitive-services-key

# Configuración de aplicación
APP_NAME=StudyMate
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# Configuración de seguridad
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=15

# Configuración de rate limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
