    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.8.0",
    "@types/supertest": "^6.0.3",
    "jest": "^30.0.4",
