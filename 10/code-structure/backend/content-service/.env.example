# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=12345
DB_NAME=studymate_dev

# Server Configuration
PORT=3004
NODE_ENV=development

# JWT Configuration (for validating tokens from auth-service)
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production

# Auth Service Configuration
AUTH_SERVICE_URL=http://localhost:3001

# User Profile Service Configuration
USER_PROFILE_SERVICE_URL=http://localhost:3003

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,video/webm,application/pdf,text/plain

# Content Configuration
MAX_CONTENT_SIZE=52428800
ALLOWED_VIDEO_TYPES=video/mp4,video/webm,video/avi
ALLOWED_DOCUMENT_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Service-to-Service Communication
SERVICE_API_KEY=studymate-services-secret-key

# Content Storage
CONTENT_STORAGE_PATH=./content
THUMBNAILS_PATH=./thumbnails
