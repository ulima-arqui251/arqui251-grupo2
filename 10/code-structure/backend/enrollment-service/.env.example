# Enrollment Service Environment Variables

# Server Configuration
PORT=3008
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=studymate_dev
DB_USER=root
DB_PASSWORD=your-database-password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=1h

# Service Integration
AUTH_SERVICE_URL=http://localhost:3005
USER_PROFILE_SERVICE_URL=http://localhost:3006
CONTENT_SERVICE_URL=http://localhost:3007

# API Keys for Service Communication
SERVICE_API_KEY=enrollment-service-api-key-change-this

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Email Configuration (future)
EMAIL_SERVICE_URL=http://localhost:3010

# Logging
LOG_LEVEL=debug
