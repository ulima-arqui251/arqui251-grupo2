# Configuración de Next.js para desarrollo
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_APP_NAME=StudyMate
NEXT_PUBLIC_APP_VERSION=1.0.0

# NextAuth.js
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-change-this

# APIs de servicios backend (para llamadas directas cuando sea necesario)
AUTH_SERVICE_URL=http://localhost:3001/api/auth
LESSON_SERVICE_URL=http://localhost:3001/api/lessons
GAMIFICATION_SERVICE_URL=http://localhost:3001/api/gamification
COMMUNITY_SERVICE_URL=http://localhost:3001/api/community
PREMIUM_SERVICE_URL=http://localhost:3001/api/premium

# Configuración de rendimiento (para cumplir escenarios)
ENABLE_CACHING=true
CACHE_TIMEOUT=300000
ENABLE_PRELOADING=true

# Analytics (futuro)
